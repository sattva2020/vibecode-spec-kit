{
  "name": "rag-context-provider",
  "displayName": "RAG Context Provider",
  "description": "AI-powered code assistant with RAG context",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:javascript",
    "onLanguage:python",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rag-context.explainCode",
        "title": "Explain Code with RAG"
      },
      {
        "command": "rag-context.searchContext",
        "title": "Search Code Context"
      },
      {
        "command": "rag-context.learnFromCode",
        "title": "Learn from Current Code"
      },
      {
        "command": "rag-context.showLearningStatus",
        "title": "Show Learning Status"
      }
    ],
    "configuration": {
      "title": "RAG Context",
      "properties": {
        "ragContext.apiUrl": {
          "type": "string",
          "default": "http://localhost:9000",
          "description": "RAG Proxy API URL"
        },
        "ragContext.autoIndex": {
          "type": "boolean",
          "default": true,
          "description": "Automatically index code on save"
        },
        "ragContext.suggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline suggestions"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "rag-context.explainCode",
          "when": "editorHasSelection",
          "group": "rag-context"
        },
        {
          "command": "rag-context.learnFromCode",
          "group": "rag-context"
        }
      ],
      "commandPalette": [
        {
          "command": "rag-context.searchContext"
        },
        {
          "command": "rag-context.showLearningStatus"
        }
      ]
    },
    "keybindings": [
      {
        "command": "rag-context.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "rag-context.searchContext",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
