{
  "name": "rag-powered-code-assistant",
  "displayName": "RAG-Powered Code Assistant",
  "description": "AI-powered code assistance with RAG system integration",
  "version": "1.0.0",
  "publisher": "rag-assistant",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "rag",
    "code-assistant",
    "ollama",
    "lightrag",
    "n8n"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rag-extension.showAIPanel",
        "title": "Open AI Panel",
        "category": "RAG"
      },
      {
        "command": "rag-extension.refreshCodeLenses",
        "title": "Refresh AI Code Lenses",
        "category": "RAG"
      },
      {
        "command": "rag-extension.analyzeSelection",
        "title": "Analyze Selected Code",
        "category": "RAG"
      },
      {
        "command": "rag-extension.generateFromComment",
        "title": "Generate Code from Comment",
        "category": "RAG"
      },
      {
        "command": "rag-extension.optimizeSelection",
        "title": "Optimize Selected Code",
        "category": "RAG"
      },
      {
        "command": "rag-extension.addDocumentation",
        "title": "Add AI Documentation",
        "category": "RAG"
      },
      {
        "command": "rag-extension.fixErrors",
        "title": "Fix Code Errors",
        "category": "RAG"
      },
      {
        "command": "rag-extension.refactorCode",
        "title": "Refactor Code",
        "category": "RAG"
      },
      {
        "command": "rag-extension.generateTests",
        "title": "Generate Tests",
        "category": "RAG"
      },
      {
        "command": "rag-extension.showFunctionSuggestions",
        "title": "Show Function Suggestions",
        "category": "RAG"
      },
      {
        "command": "rag-extension.showClassImprovements",
        "title": "Show Class Improvements",
        "category": "RAG"
      },
      {
        "command": "rag-extension.acceptSuggestion",
        "title": "Accept Suggestion",
        "category": "RAG"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "rag-assistant-panel",
          "name": "RAG Assistant",
          "when": "rag-assistant.enabled"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "rag-extension.analyzeSelection",
          "group": "rag@1"
        },
        {
          "when": "editorHasSelection",
          "command": "rag-extension.optimizeSelection",
          "group": "rag@2"
        },
        {
          "when": "editorHasSelection",
          "command": "rag-extension.refactorCode",
          "group": "rag@3"
        },
        {
          "when": "editorHasSelection",
          "command": "rag-extension.generateTests",
          "group": "rag@4"
        },
        {
          "command": "rag-extension.addDocumentation",
          "group": "rag@5"
        },
        {
          "command": "rag-extension.fixErrors",
          "group": "rag@6"
        }
      ],
      "commandPalette": [
        {
          "command": "rag-extension.showAIPanel",
          "when": "true"
        },
        {
          "command": "rag-extension.refreshCodeLenses",
          "when": "true"
        },
        {
          "command": "rag-extension.analyzeSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "rag-extension.generateFromComment",
          "when": "true"
        },
        {
          "command": "rag-extension.optimizeSelection",
          "when": "editorHasSelection"
        },
        {
          "command": "rag-extension.addDocumentation",
          "when": "true"
        },
        {
          "command": "rag-extension.fixErrors",
          "when": "true"
        },
        {
          "command": "rag-extension.refactorCode",
          "when": "editorHasSelection"
        },
        {
          "command": "rag-extension.generateTests",
          "when": "editorHasSelection"
        }
      ]
    },
    "configuration": {
      "title": "RAG Extension",
      "properties": {
        "rag-extension.ragProxyUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "URL of the RAG Proxy service"
        },
        "rag-extension.enableInlineCompletions": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered inline completions"
        },
        "rag-extension.enableHoverProvider": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered hover explanations"
        },
        "rag-extension.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI-powered code lens suggestions"
        },
        "rag-extension.maxSuggestions": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of AI suggestions to show"
        },
        "rag-extension.confidenceThreshold": {
          "type": "number",
          "default": 0.7,
          "description": "Minimum confidence threshold for suggestions"
        },
        "rag-extension.autoSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic AI suggestions"
        },
        "rag-extension.showConfidence": {
          "type": "boolean",
          "default": true,
          "description": "Show confidence scores for suggestions"
        }
      }
    },
    "keybindings": [
      {
        "command": "rag-extension.showAIPanel",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "rag-extension.analyzeSelection",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "editorHasSelection"
      },
      {
        "command": "rag-extension.generateFromComment",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
